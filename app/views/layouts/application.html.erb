<!DOCTYPE html>
<html>
  <head>
    <title>Testie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Alegreya:700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400" rel="stylesheet">
    <script src="https://kit.fontawesome.com/46219bc6ba.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="dc-userlogin">
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser.</p>
    <![endif]-->

    <!-- Preloader Start -->
    <div class="preloader-outer" style="display: none;">
      <div class="wt-preloader-holder">
        <div class="wt-loader"></div>
      </div>
    </div>

    <div id="dc-wrapper" class="dc-wrapper dc-haslayout <%= 'logistic-bkg' if action_name == 'index' %>">
      <div class="dc-contentwrapper">
        <%= render 'partials/header' %>
        <main id="dc-main" class="dc-main dc-main-test dc-haslayout">
          <%= render 'partials/flash_messages' if flash.present? %>
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
