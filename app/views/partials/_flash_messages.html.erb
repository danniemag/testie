<!--
   Types of flash messages:
   - success (green)
   - warning (yellow)
   - error (red)
   - info (light blue)
-->

<script type="text/javascript">
    toastr.options = {
        "closeButton": true,
        "debug": false,
        "newestOnTop": true,
        "progressBar": true,
        "positionClass": "toast-top-center",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "8000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }

    <% flash.each do |f| %>
    <% type = f[0].to_s %>
    toastr['<%= type %>']('<%= f[1] %>');
    <% end %>
</script>
